projek PetDataManagement;
type
  xHewan = record
    nama : string; 
    jenis : string;
    umur : integer;
    jenis_kelamin : char;
    vaksin : char;
end;

var 
  hewan : array [1..25] of xHewan;
  n,i : integer;
  ulang : char;

function kategoriumur(umur : integer):string;
begin
  if umur < 6 then
    kategoriumur := 'Anakan'
  if umur <= 24 then
    kategoriumur := 'Dewasa'
  else
    kategoriumur := 'Tua'
end;

procedure tampilhewan(h : xHewan);
begin
  writeln('Nama : ',h.nama);
  writeln('Jenis : ',h.jenis);
  writeln('Umur : ',h.umur,'Bulan');
  writeln('Kategori : ',kategoriumur(h.umur));

  if h.jenis_kelamin = 'J' then
    writeln('Jenis kelamin : Jantan')
  else
    writeln('Jenis kelamin : Betina');

  if h.vaksin = 'y' then
    writeln('Status vaksin : sudah di vaksin')
  else
    writeln('Status vaksin : belum vaksin');
  writeln;
end;
procedure inputdata();
begin 
    clrscr;
    writeln('=== Data Hewan Peliharaan ===');
    write('Jumlah hewan: ');
    readln(n);

    for i := 1 to n do 
    begin 
        writeln;
        writeln('Hewan ke- ',i);
        write('Nama : ');
        readln(hewan[i].nama);
        write('Jenis : ');
        readln(hewan[i].jenis);
        write('Umur (bulan):  ');
        readln(hewan[i].umur);
        write('Jenis Kelamin (J/B) :  ');
        readln(hewan[i].jenis_kelamin);
        write('Sudah vaksin? (y/b) :  ');
        readln(hewan[i].vaksin);
        writeln;
    end;
end;


procedure tampilsemua();
begin
    writeln('=== DATA HEWAN PELIHARAAN ===');
    writeln;
    for i := 1 to n do 
    tampilhewan(hewan[i]);
end;

begin 
    repeat
        inputdata();
        tampilsemua();
        write ('Mau tambah atau selesai?(y/t) :');
        readln(ulang);
    until (ulang = 't') or (ulang = 'T');
    
    writeln;
        writeln('Terima kasih sudah menggunakan jasa kami');
end.
